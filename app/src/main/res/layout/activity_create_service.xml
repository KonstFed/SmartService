<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateServiceActivity">

    <TextView
        android:id="@+id/new_service_UI_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя сервиса"
        android:textSize="@dimen/text_size_h2" />

    <EditText
        android:id="@+id/new_service_name"
        android:layout_below="@+id/new_service_UI_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_h2"
        android:background="@drawable/border_style"
        android:hint="Супер сервис"
     />
    <TextView
        android:id="@+id/new_service_UI_2"
        android:layout_below="@+id/new_service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_h2"
        android:text="Краткое описание"/>
    <EditText
        android:id="@+id/new_service_descript"
        android:layout_below="@+id/new_service_UI_2"
        android:layout_width="match_parent"
        android:minHeight="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style"
        android:hint="Мой супер пупер сервис по блинам"
        android:textSize="@dimen/text_size_h2"
        android:gravity="left"
    />
    <RadioGroup
        android:id="@+id/new_service_UI_3"
        android:layout_below="@id/new_service_descript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/phone_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size_h2"
                android:id="@+id/new_service_UI_radio_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Телефон"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/sms_task"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size_h2"
                android:id="@+id/new_service_UI_radio_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="СМС"/>
        </LinearLayout>
    </RadioGroup>
    <EditText
        android:layout_below="@+id/new_service_UI_3"
        android:id="@+id/new_service_UI_4"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:hint="Номер телефона"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_h2"/>
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:layout_above="@+id/bottom_navigation"
        />
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/ic_home_black_24dp"/>
        <ImageButton
            android:id="@+id/new_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/ic_add_box_black_24dp"/>
        <ImageButton
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/ic_settings_black_24dp"/>
    </LinearLayout>
</RelativeLayout>