<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/item_service_style">
        <LinearLayout
            android:id="@+id/infification_id"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/border_style"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/service_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="30sp"
                android:padding="10dp"
                android:gravity="left"
                android:text="otladka"
                >
            </TextView>

            <ImageButton
                android:id="@+id/rewrite"
                android:src="@drawable/ic_rewrite_pen"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/service_button_yes"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"

                    android:layout_height="70dp"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:scaleType="fitXY"

                    />

                <ImageButton
                    android:id="@+id/service_button_no"
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_block_black_24dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="70dp"
                    />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="vertical">

            </LinearLayout>

            <ImageButton
                android:id="@+id/statistics"
                android:src="@drawable/ic_stats"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="fill_parent"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                style="@style/ExplainText"
                android:text="Вызвать"
                >

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                style="@style/ExplainText"
                android:text="Не вызывать"
                >
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            style="@style/ExplainText"
            android:text="Статистика"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
